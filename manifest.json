{
  "manifest_version": 3,
  "name": "Clicksy",
  "version": "0.0.1",
  "description": "Automatically clicks the 'Reply Anyway' button on specific pages.",
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "matches": ["https://app.slack.com/client/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png",
    "512": "icons/icon512.png"
  }
}
